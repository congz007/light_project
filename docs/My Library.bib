  author = {Asner, Gregory P. and Martin, Roberta E. and Tupayachi, Raul and Emerson, Ruth and Martinez, Paola and Sinca, Felipe and Powell, George V. N. and Wright, S. Joseph and Lugo, Ariel E.},
