}

@article{Lian2021,
  title = {Artificial Light Pollution Inhibits Plant Phenology Advance Induced by Climate Warming},
  author = {Lian, Xihong and Jiao, Limin and Zhong, Jing and Jia, Qiqi and Liu, Jiafeng and Liu, Zejin},
  year = {2021},
