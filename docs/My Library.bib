@article{Sack2013b,
  title = {How Do Leaf Veins Influence the Worldwide Leaf Economic Spectrum? {{Review}} and Synthesis},
  shorttitle = {How Do Leaf Veins Influence the Worldwide Leaf Economic Spectrum?},
  author = {Sack, Lawren and Scoffoni, Christine and John, Grace P. and Poorter, Hendrik and Mason, Chase M. and {Mendez-Alonzo}, Rodrigo and Donovan, Lisa A.},
