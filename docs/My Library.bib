@article{Bennie2018,
  title = {Artificial Light at Night Alters Grassland Vegetation Species Composition and Phenology},
  author = {Bennie, Jonathan and Davies, Thomas W. and Cruse, David and Bell, Fraser and Gaston, Kevin J.},
  year = {2018},
