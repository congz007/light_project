@article{Russo2021,
  title = {The Interspecific {{Growth}}\textendash{{Mortality}} Trade-off Is Not a General Framework for Tropical Forest Community Structure},
  author = {Russo, Sabrina E. and McMahon, Sean M. and Detto, Matteo and Ledder, Glenn and Wright, S. Joseph and Condit, Richard S. and Davies, Stuart J. and Ashton, Peter S. and Bunyavejchewin, Sarayudh and {Chang-Yang}, Chia-Hao and Ediriweera, Sisira and Ewango, Corneille E. N. and Fletcher, Christine and Foster, Robin B. and Gunatilleke, C. V. Savi and Gunatilleke, I. A. U. Nimal and Hart, Terese and Hsieh, Chang-Fu and Hubbell, Stephen P. and Itoh, Akira and Kassim, Abdul Rahman and Leong, Yao Tze and Lin, Yi Ching and Makana, Jean-Remy and Mohamad, Mohizah Bt and Ong, Perry and Sugiyama, Anna and Sun, I.-Fang and Tan, Sylvester and Thompson, Jill and Yamakura, Takuo and Yap, Sandra L. and Zimmerman, Jess K.},
  year = {2021},
